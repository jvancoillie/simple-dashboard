{% extends 'admin/layout.html.twig' %}

{% block title %}Screen index{% endblock %}

{% block main %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ 'screen.title'|trans }}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a  class="btn btn-sm btn-outline-secondary mr-2" href="{{ path('admin_screen_new') }}"><i class="fas fa-plus"></i> {{ 'screen.action.add'|trans }}</a>

            {{ include('admin/screen/_truncate_form.html.twig') }}

        </div>
    </div>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>{{ 'screen.name'|trans }}</th>
            <th>{{ 'screen.description'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for screen in screens %}
            <tr>
                <td>{{ screen.name }}</td>
                <td>{{ screen.description|md2html }}</td>
                <td>
                    <div class="d-flex">
                        <a class="btn btn-sm btn-outline-primary mr-2"  href="{{ path('admin_screen_edit', {'id': screen.id}) }}">
                            <i class="fas fa-edit"></i>
                            <span class="sr-only">{{ 'edit'|trans }}</span>
                        </a>
                        {{ include('admin/screen/_delete_form.html.twig', { screen:screen }, withContext=false) }}
                    </div>


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'no_records'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
